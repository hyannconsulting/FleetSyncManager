{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=fleetsyncmanager;Username=fleetsync_user;Password=FleetSync123!;Include Error Detail=true;Pooling=true;Minimum Pool Size=1;Maximum Pool Size=20;",
    "InMemoryConnection": "InMemory"
  },
  "DatabaseSettings": {
    "UseInMemoryDatabase": true,
    "AutoMigrate": true,
    "SeedSampleData": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/fleetmanager-api-dev-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-here-must-be-at-least-256-bits-FleetSyncManager2025",
    "Issuer": "FleetSyncManager",
    "Audience": "FleetSyncManagerAPI",
    "ExpirationMinutes": 1440
  },
  "CORS": {
    "BlazorClientUrls": [
      "https://localhost:7001",
      "http://localhost:5001"
    ]
  }
}
